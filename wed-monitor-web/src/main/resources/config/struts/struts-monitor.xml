<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package name="monitor" namespace="/monitor" extends="default">

        <action name="monitor" class="com.dianping.wed.monitor.web.action.monitor.MonitorAction">
            <result type="freemarker" name="success">/WEB-INF/pages/monitor/monitor.ftl</result>
        </action>

        <action name="datapreview" class="com.dianping.wed.monitor.web.action.monitor.PreviewDataAction">
            <result type="freemarker" name="success">/WEB-INF/pages/monitor/datapreview.ftl</result>
        </action>
        <action name="optionpreview" class="com.dianping.wed.monitor.web.action.monitor.PreviewOptionAction">
            <result type="freemarker" name="success">/WEB-INF/pages/monitor/optionpreview.ftl</result>
        </action>
        <action name="pageconfiglist" class="com.dianping.wed.monitor.web.action.monitor.PageConfigListAction">
            <result type="freemarker" name="success">/WEB-INF/pages/monitor/pageconfiglist.ftl</result>
        </action>
        <action name="pageconfigdetail" class="com.dianping.wed.monitor.web.action.monitor.PageConfigDetailAction">
            <result type="freemarker" name="success">/WEB-INF/pages/monitor/pageconfigdetail.ftl</result>
        </action>

    </package>

    <package name="ajax_monitor" namespace="/ajax/monitor" extends="default">

        <action name="option" class="com.dianping.wed.monitor.web.action.monitor.ajax.OptionJsonAction">
            <result type="json">
                <param name="excludeNullProperties">true</param>
                <param name="ignoreHierarchy">false</param>
                <param name="includeProperties">code,msg\..*</param>
            </result>
        </action>

        <action name="data" class="com.dianping.wed.monitor.web.action.monitor.ajax.DataJsonAction">
            <result type="json">
                <param name="excludeNullProperties">true</param>
                <param name="ignoreHierarchy">false</param>
                <param name="includeProperties">code,msg\..*</param>
            </result>
        </action>

        <action name="datapreview" class="com.dianping.wed.monitor.web.action.monitor.ajax.DataPreviewJsonAction">
            <result type="json">
                <param name="excludeNullProperties">true</param>
                <param name="ignoreHierarchy">false</param>
                <param name="includeProperties">code,msg\..*</param>
            </result>
        </action>

        <action name="datapreviewop" class="com.dianping.wed.monitor.web.action.monitor.ajax.DataPreviewOpJsonAction">
            <result type="json">
                <param name="excludeNullProperties">true</param>
                <param name="ignoreHierarchy">false</param>
                <param name="includeProperties">code,msg\..*</param>
            </result>
        </action>

        <action name="pageconfigop" class="com.dianping.wed.monitor.web.action.monitor.ajax.PageConfigOpJsonAction">
            <result type="json">
                <param name="excludeNullProperties">true</param>
                <param name="ignoreHierarchy">false</param>
                <param name="includeProperties">code,msg\..*</param>
            </result>
        </action>

    </package>
</struts>
